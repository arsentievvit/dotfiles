" Disable compatibility with vi
set nocompatible

" Filetype detection
filetype on

" Enable filetype plugins
filetype plugin on

" Add filetype specific indents
filetype indent on

" Enable syntax highlight
syntax on

" Number lines
set number

" Set cursor line
set cursorline

" Use space characters instead of tabs
set expandtab

" No backups
set nobackup

" No scroll below or above 10 lines
set scrolloff=10

" No wrapping
set nowrap

" Ignore case during search
set ignorecase

" Show mode
set showmode

" Save history 
set history=1000

colorscheme blue
set background=dark
set showtabline=2
